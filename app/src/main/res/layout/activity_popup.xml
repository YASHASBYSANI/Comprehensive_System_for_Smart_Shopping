<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <Button
            android:id="@+id/add"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="18dp"
            android:background="#555555"
            android:text="Add"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/popcancel"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="21dp"
            android:background="#555555"
            android:onClick="popcan"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/quantity"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignRight="@+id/pprice"
            android:layout_alignEnd="@+id/pprice"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/pname"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/pname"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="Product Name :"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pname"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="Name"
            android:textColor="#777777"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/pweight"
            android:layout_alignStart="@+id/pweight"
            android:layout_below="@+id/pname"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Weight :"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pweight"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="Weight (Unit)"
            android:textColor="#777777"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/pprice"
            android:layout_alignStart="@+id/pprice"
            android:layout_below="@+id/pweight"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Price (Rs.) :"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pprice"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="Price"
            android:textColor="#777777"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/pprice"
            android:layout_alignStart="@+id/pprice"
            android:layout_below="@+id/pprice"
            android:layout_marginTop="25dp"
            android:text="Quantity"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>