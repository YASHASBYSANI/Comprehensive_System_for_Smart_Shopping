<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sourcey.smartshopping">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".HomePageActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".EnterStoreActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".ProdPopup" />
        <activity
            android:name=".ScanProductActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".Profile"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".ViewListContents" />
        <activity
            android:name=".Checkout"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".WalletActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".CardOptions"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".CreditDebitCard"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".ThankYouActivity"
            android:theme="@style/AppTheme.Dark" />
    </application>

</manifest>